<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.YabaSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/slash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/yaba_nbg</item>
        <item name="postSplashScreenTheme">@style/Theme.Yaba.Home</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
    </style>
    <!-- Base application theme. -->
    <style name="Theme.Yaba" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">#FF4f83cc</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Yaba.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.Yaba.Home" parent="Theme.Yaba.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>



    <style name="Theme.Yaba.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.Yaba.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>
